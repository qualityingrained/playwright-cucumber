{
	"printWidth": 80,
	"tabWidth": 3,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"singleQuote": false,
				"parser": "json"
			}
		},
		{
			"files": "*.js",
			"options": {
				"singleQuote": false,
				"parser": "typescript"
			}
		}
	]
}
